{% extends 'base.html.twig' %}

{% block title %}Toutes Mes Recettes{% endblock %}

{% block body %}

    <div class="index-recipe">
        <div class="header">
            <h1>Recettes Maison</h1>
        </div>
        <div class="content">
            <h2>Toutes mes recettes</h2>
            <hr>
            <div class="list-manage-recipe">
                <ul>
                    {% for recipe in recipes %}
                    <li>
                        {{ recipe.title }} : <br>
                        <div class="manage-recipe">
                            <a class="btn-manage" href="{{ path('recipe_edit', { id : recipe.id }) }}">Editer</a> <p>  /  </p> {% include('recipe/_delete_form.html.twig') %}
                        </div>
                    </li>
                        <hr>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}