{% extends 'base.html.twig' %}

{% block title %}Recettes maison{% endblock %}

{% block body %}

    <div class="show-recipe">

            <h2>{{ recipe.title }}</h2>

            <div class="details-recipe">

                <img class="picture-recipe" src="{{ recipe.pictureUrl }}" alt="picture-{{ recipe.title }}">

                <div class="list-recipe">

                    <ul class="list-material">
                        <h3>Matériels :</h3>
                        {% for material in recipe.materials %}
                            <li>{{ material.name }}</li>
                        {% endfor %}
                    </ul>
                    <div class="logo-recipe">
                        <img src="{{ asset('build/baking.svg') }}" alt="logo-baking">
                    </div>

                    <ul>
                        <h3>Ingrédients :</h3>
                        {% for ingredient in recipe.ingredients %}
                            <li>{{ ingredient.quantity }} : {{ ingredient.name }}</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>

            <div class="description-recipe">
                <p>{{ recipe.description }}</p>
            </div>


    </div>
{% endblock %}